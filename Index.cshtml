            drawVerticalLine(ctx,x + 8 * width, y, y + 9 * width);
            drawDiagonalLine(ctx,x + 3 * width, x + 5 * width, y, y + 2 * width);
            drawDiagonalLine(ctx,x + 3 * width, x + 5 * width, y + 2 * width, y);
